<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">

    <title>AccorDB</title>
    
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
    <header class="navbar green navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <ul class="nav pull-left">
                    <li><a><i class="icon-white icon-leaf"></i> AccorDB</a></li>
                </ul>
            </div>
        </div>
    </header>
    
    <section class="container-fluid pad40"> 
        <section class="row-fluid">
            <div class="span2 sideBar">
                <br>
                <ul>
                    <li>
                        <figure>
                            <a href="/upload"><i class="icon-list"></i> Gene Upload</a>
                        </figure>
                    </li>
                    <li class="active">
                        <figure>
                            <a href="/summary"><i class="icon-th"></i> Datasets Summary</a>
                        </figure>
                    </li>
                    <li>
                        <figure>
                            <a href="/organism"><i class="icon-thumbs-up"></i> Organism Overlap</a>
                        </figure>
                    </li>
                </ul>
            </div>

            <section class="span10 content borBox">
                <div class="row-fluid">
                    <div class="page-header">
                        <h1>Totals in all datasets <small>from <%= @stamp.toUTCString() %></small></h1>
                    </div>
                </div>
                <div class="row-fluid">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <% for dataSet, rubbish of @dataSets: %>
                                    <th><%= dataSet %></th>
                                <% end %>
                            </tr>
                        </thead>
                        <tbody>
                            <% for organism, dataSets of @organisms: %>
                                <tr>
                                    <th><%= organism %></th>
                                    <% for dataSet, rubbish of @dataSets: %>
                                        <td><%= dataSets[dataSet] %></td>
                                    <% end %>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <div class="row-fluid">
                    <h2>Query</h2>
                    <pre><%= @query %></pre>
                </div>
                <footer>&copy 2012 <a href="http://intermine.org">InterMine</a>, Cambridge CB2 1QR, UK</footer>
            </section>
        </section>
    </section>
</body>
</html>